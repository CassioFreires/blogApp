<% if(errors.length > 0) { %>
    <div class="row">
        <div class="col">
            <div class="alert alert-danger w-75 mt-1" role="alert">
                <% errors.forEach((error) => { %>
                    <p class="fw-bold mt-2"><%= error %></p>
               <% }); %>
            </div>
        </div>
     </div> 
    <% } %>
    
    <% if(success.length > 0) { %>
        <div class="row">
            <div class="col">
                <div class="alert alert-success w-75 mt-2" role="alert">
                    <% success.forEach((success) => { %>
                        <p class="fw-bold mt-2"><%= success %></p>
                   <% }); %>
                </div>
            </div>
         </div> 
        <% } %>
    
    