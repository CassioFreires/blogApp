<%- include('includes/head') %>
    <%- include('includes/nav')%>
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="mt-5 mb-5">
                    <h2 class="text-center display-5">Faça seu login!</h2>
                </div>
                <div class="card p-3 w-50 m-auto">
                    <% if (error.length > 0) { %>
                      <div class="alert alert-danger">
                        <%= error%>
                      </div>
                    <%}%>
                      
                    <div class="card-body ">
                        <form action="/usuario/login" method="POST">
                            <div class="mb-3">
                              <label for="exampleInputEmail1" class="form-label">E-mail</label>
                              <input type="email" class="form-control" placeholder="digite seu e-mail" name="email" required>
                            </div>
                            <div class="mb-3">
                              <label for="exampleInputPassword1" class="form-label">Senha</label>
                              <input type="password" class="form-control" placeholder="digite sua senha" name="password" required>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Check</label>
                              </div>
                            <button type="submit" class="btn btn-primary w-25">Entrar</button>
                            <div class="mt-3">
                              <p>Não tem conta? <a href="/usuario/registro">Crie uma aqui!</a></p>
                            </div>
                          </form>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
        <%- include('includes/footer') %>